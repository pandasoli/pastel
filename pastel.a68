# -*- coding: utf-8 -*- #

PR include "os.a68" PR;
PR include "utils.a68" PR;
PR include "text processing.a68" PR;
PR include "help.a68" PR

PR include "handles/sub.a68" PR;

STRING
  cl clear = esc + "[m",
  cl one = esc + "[1;31m",
  cl two = esc + "[37;100m",
  cl three = esc + "[9m",
  cl four = esc + "[90m";

BEGIN
	INT argi := 2;
	STRING arg := a68g argv(argi);

	IF arg = "debug" THEN
		arg := a68g argv(argi);
		argi +:= 1
	FI;

	main sub(argi)
END
