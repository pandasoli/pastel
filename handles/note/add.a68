# -*- coding: utf-8 -*- #

PR include "../../database/note.a68" PR

#
	add note
	add notes... group
#
PROC note add = (REF INT argi) VOID: (
	STRING group := "";

	IF a68g argc - argi >= 1
	THEN group := a68g argv(a68g argc)
	FI;

	WHILE (group /= ""|argi < a68g argc|argi <= a68g argc) DO
		STRING arg = a68g argv(argi);
		argi +:= 1;

		NOTE note := (
			# content # arg,
			# group # group
		);

		write note(note)
	OD
)
