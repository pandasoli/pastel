# -*- coding: utf-8 -*- #

PR include "../utils.a68" PR;
PR include "../database/todo.a68" PR

PROC rm = (INT argi) VOID: (
	FLEX [0] INT indexes;

	FOR j FROM argi TO a68g argc DO
		STRING arg = a68g argv(j);
		indexes +:= TOINT arg
	OD;

	FLEX [0] TODO new todos;
	INT i := 1;

	get todos((TODO todo) VOID:
		IF date OF todo = today THEN
			IF NOT (i INCL indexes)
			THEN new todos +:= todo FI;
			i +:= 1
		FI
	);

	write todos(new todos)
)
