# -*- coding: utf-8 -*- #

CHAR esc = REPR 27;

OP +:= = (REF FLEX [] INT in out, INT item) REF FLEX [] INT: (
	[UPB in out + 1] INT new;
	new[:UPB in out] := in out;
	new[UPB new] := item;
	in out := new
);

PRIO INCL = 5;
OP INCL = (INT item, [] INT list) BOOL: (
	BOOL res := FALSE;

	FOR i TO UPB list DO
		IF list[i] = item THEN
			res := TRUE;
			done incl
		FI
	OD;
	done incl: res
)
